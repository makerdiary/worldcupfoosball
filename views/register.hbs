<form class="col-sm-offset-4 col-sm-4 bodycenter" role="form" method="post">
    <fieldset>
        <legend>Create an account</legend>
        <div class="form-group">
            <label for="playername" class="control-label">Player Name</label>
            <input type="text" class="form-control" id="playername" placeholder="Player name" required>
        </div>
        <div class="form-group">
            <label for="playeremail" class="control-label">Email Address</label>
            <input type="text" class="form-control" id="playeremail" placeholder="Email" required>
        </div>
        <div class="form-group">
            <label for="password" class="control-label">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Password" required>
        </div>
        <div class="form-group">
            <label for="password1" class="control-label">Password Confirmation</label>
            <input type="password" class="form-control" id="password1" placeholder="Enter password again" required>
        </div>
        <div class="form-group">
            <button type="submit" id="register1" class="btn btn-primary">Join</button>
        </div>
    </fieldset>
</form>


<script type="text/javascript">
    $(function(){
        $("#register1").click(function(){
            var playername = $("#playername").val();
            var playeremail = $("#playeremail").val();
            var password = $("#password").val();
            var password1 = $("#password1").val();
            if(password !== password1){
                $("#password").css("border","1px solid red");
                $("#password1").css("border","1px solid red");
            }else if(password === password1){
                var data = {"playername":playername, "playeremail":playeremail, "password":password};
                $.ajax({
                    url: '/register',
                    type: 'post',
                    data: data,
                    success: function(data,status){
                        if(status == 'success'){
                            location.href = 'login';
                        }
                    },
                    error: function(data,err){
                        location.href = 'register';
                    }
                });
            }
        });
    });
</script>